@model IEnumerable<PruebadeResistencia.Models.Preparacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDePreparación)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Molino)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDePreparación)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cemento.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Molino.Id)
            </td>
           
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
